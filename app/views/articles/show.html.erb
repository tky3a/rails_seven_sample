<div class="flex flex-col flex-1 h-screen px-10 py-5">
    <div id="article_header" class="w-full py-4 px-2 border bg-white">
        <p>
            <%= @article.user.uid%>
        </p>
        <p>
            作成日時：<%= created_at(@article.created_at)%>
            更新日時：<%= created_at(@article.updated_at)%>
        </p>
        <h1 class="text-4xl">
            <%= @article.title%>
        </h1>

        <div>
            <% @article.tags.each do |tag| %>
            <p>
                <%= tag.name %>
            </p>
            <% end %>
        </div>
    </div>
    <div id="article_body" class="w-full py-4 px-2 border bg-white">
        <%= @article.text%>
    </div>
</div>