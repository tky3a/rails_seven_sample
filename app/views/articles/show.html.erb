<div class="flex flex-col flex-1 h-screen px-10 py-5">
  <div id="article_header" class="w-full py-4 px-2 border bg-white">
    <div class="flex flex-row ">
      <p class="text-right">
        <%= @article.user.uid%>
      </p>
      <% if current_user && @article.user.uid == current_user.uid %>
        <%= link_to "編集", edit_article_path, data: {turbo: false}, class: "flex-1 text-right" %>
      <% end %>

    </div>
    <p>
      作成日時：<%= created_at(@article.created_at)%>
      更新日時：<%= created_at(@article.updated_at)%>
    </p>
    <h1 class="text-3xl font-bold">
      <%= @article.title%>
    </h1>

    <div class="flex flex-row">
      <% @article.tags.each do |tag| %>
        <p>
          <%= tag.name %>
        </p>
        &nbsp;
      <% end %>
    </div>
  </div>
  <div id="article_body" class="w-full py-4 px-2 border bg-white">
    <%= markdown(@article.text).html_safe %>
  </div>
</div>
