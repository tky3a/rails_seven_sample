  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>
<%= render 'articles/articles_main_view', articles: @articles %>

<div class="flex flex-1 items-center justify-center flex-row pb-4">
  <%= paginate @articles %>
</div>
