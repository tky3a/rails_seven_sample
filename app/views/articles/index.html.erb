  <% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="w-full h-full py-4 px-4">
      <% @articles.each do |article| %>
      <div class="w-full pb-4">
          <%= link_to article_path(uid: article.user.uid, id: article.id), data: {turbo: false}, class: "w-full" do %>
          <div class="bg-white flex-1">
              <div class="px-4 py-4">
                  <p class="text-left">@<%= article.user.uid %>が<%= created_at(article.created_at) %>に投稿しました</p>
                  <p class="text-left text-2xl"><%= article.title %></p>
                  <div class="flex flex-1 flex-row">
                      <% article.tags.each do |tag| %>
                      <div class="pr-2 hover:text-sky-300">
                          <div class="hover:border-b hover:border-slate-600">
                              <%= button_to tag.name, {controller: "static_pages", action: "help"}, {method: :get, data: { turbo: false }, class: "link" }%>
                          </div>
                      </div>
                      <% end %>
                  </div>
              </div>
          </div>
          <% end %>
      </div>
      <% end %>
  </div>